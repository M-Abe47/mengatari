<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), method: :delete, remote: true, class: "btn btn-success far fa-thumbs-up" do %>
      <%= post.favorites.count %>いいね
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), method: :post, remote: true, class: "btn btn-outline-success far fa-thumbs-up" do %>
      <%= post.favorites.count %>いいね
    <% end %>
  <% end %>
<% else %>
  <%= post.favorites.count %>いいね
<% end %>