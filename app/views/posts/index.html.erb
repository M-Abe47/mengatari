<div class="container">
  <div class="row">
    <!--検索フォーム-->
    <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-3">
      <h3>人気の投稿</h3>
      <% @favorite_posts.each do |post| %>
      <tr>
        <td>
          <h3>
            <%= link_to post_path(post.id) do %>
              <%= post.title %>
            <% end %>
          </h3>
          <%= post.body %>
          <%= render "favorites/favorite-btn", post: post %>
          <%= post.user.name %>
          <div class="post-evaluation" data-score="<%= post.evaluation %>"></div>
          </br>
        </td>
      </tr>
      <% end %>
    </div>
      <div class="col-9">
        <table>
            <% @posts.each do |post| %>
              <div class="container" style="background-color: rgba(0, 0, 255, 0.1);">
                <div class="box_left">
                  <%= link_to post_path(post.id) do %>
                    <%= attachment_image_tag post, :image, :fill, 400, 300, fallback: "no_image.jpg", size: "350x250", class:"border rounded" %>
                  <% end %>
                </div>
                <div class="box_right">
                  <%= attachment_image_tag post.user, :image, :fill, 30, 30, fallback: "no_image.jpg" %>
                  <%= post.user.name %>
                  <h1><%= post.title %></h1>
                  <%= post.body %>
                  <%= render "favorites/favorite-btn", post: post %>
                  <div class="post-evaluation" data-score="<%= post.evaluation %>"></div>
                </div>
              </div>
            <% end %>
        </table>
        <script>
          $('.post-evaluation').empty();
          $('.post-evaluation').raty({
            readOnly: true,
            score: function() {
              return $(this).attr('data-score');
            },
            path: '/assets'
          });
        </script>
      </div>
  </div>
</div>