<div class="container">
  <div class="row">
    <!--検索フォーム-->
    <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-2">
      <h3>人気の投稿</h3>
      <% @favorite_posts.each.with_index(1) do |post, i| %>
        <%= link_to post_path(post.id) do %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= i %>位
                <%= post.user.name %>
              </h5>
              <h6 class="card-subtitle text-muted">
                <%= post.title %>
              </h6>
              <p class="card-text">
                <%= post.favorites.count %>いいね
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-9">
        <% @posts.each do |post| %>
          <div class="card">
              <%= link_to post_path(post.id) do %>
                <%= attachment_image_tag post, :image, :fill, 400, 300, fallback: "no_image.jpg", size: "350x250", class:"border rounded" %>
              <% end %>
            <div class="card-body" id="post_<%= post.id %>">
              <div class="column flex-direction:row">
                <div class="tab col-md-9">
                  <div class="content col-md-9">
                <%= attachment_image_tag post.user, :image, :fill, 30, 30, fallback: "no_image.jpg" %>
                <%= post.user.name %>
                <h1><%= post.title %></h1>
                <%= post.category %>
                <%= post.body %>
                <!--いいねボタン-->
                <div class="favorite-btn"><%= render "favorites/favorite-btn", post: post %></div>
                <div class="post-evaluation" data-score="<%= post.evaluation %>"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <script>
          $('.post-evaluation').empty();
          $('.post-evaluation').raty({
            readOnly: true,
            score: function() {
              return $(this).attr('data-score');
            },
            path: '/assets'
          });
        </script>
    </div>
  </div>
</div>