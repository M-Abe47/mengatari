<div class="container">
  <div class="row">
  <!--投稿検索-->
  <%= search_form_for @q, url: search_posts_path do |f| %>
    <%= f.label :title_cont, '投稿名' %>
    <%= f.search_field :title_cont %>
    <%= button_tag sanitize('<i class="fa fa-search"></i>'), :type => "submit", :class =>"btn btn-light btn-sm" %>
  <% end %>
  </div>

  <div class="row">
    <div class="col-lg-3">
      <h3>人気の投稿</h3>
      <% @favorite_posts.each.with_index(1) do |post, i| %>
        <%= link_to post_path(post.id) do %>
          <div class="card mb-3 border-success">
            <div class="card-body">
              <h5 class="card-title text-muted">
                <% if i == 1 %>
                  <i class="fas fa-crown text-warning"></i>
                <% elsif i == 2 %>
                  <i class="fas fa-crown text-muted"></i>
                <% elsif i == 3 %>
                  <i class="fas fa-crown text-danger"></i>
                <% end %>

                <%= i %>位
                <%= post.user.name %>
              </h5>
              <h6 class="card-subtitle text-muted">
                <%= post.title %>
              </h6>
              <p class="card-text text-muted">
                <%= post.favorites.count %>いいね
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="col-lg-1">
    </div>

    <div class="col-lg-8">
        <% @posts.each do |post| %>
          <div class="card mb-5 fly shadow">
            <div class="row no-gutters">
              <div class="col-lg-6 my-auto">
                <%= link_to post_path(post.id) do %>
                    <%= attachment_image_tag post, :image, :fill, 350, 250, fallback: "black_logo.jpg", size: "350x250", class:"border rounded" %>
                <% end %>
              </div>
              <div class="col-lg-6">
                <div class="card-body" id="post_<%= post.id %>">
                  <!--ユーザーアイコン-->
                  <%= link_to user_path(post.user.id) do %>
                    <%= attachment_image_tag post.user, :image, :fill, 30, 30, fallback: "no_image.jpg" %>
                    <%= post.user.name %>
                  <% end %>
                  <!--タイトル、カテゴリ、本文-->
                  <h4 class="card-title mt-2">
                    <%= post.title %>
                  </h4>
                  <%= post.category %>
                  <p><%= post.body %></p>
                  <!--いいねボタン-->
                  <div class="favorite-btn"><%= render "favorites/favorite-btn", post: post %></div>
                  <!--評価-->
                  <div class="post-evaluation" data-score="<%= post.evaluation %>"></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <script>
          $('.post-evaluation').empty();
          $('.post-evaluation').raty({
            readOnly: true,
            score: function() {
              return $(this).attr('data-score');
            },
            path: '/assets'
          });
        </script>
    </div>
  </div>
  <div class="pagination float-right"><%= paginate @posts, theme: 'twitter-bootstrap-4' %></div>
</div>