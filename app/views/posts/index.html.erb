<div class="container">
  <div class="row">
  <!--投稿検索-->
  <%= search_form_for @q, url: search_posts_path do |f| %>
    <%= f.label :title_cont, '投稿名' %>
    <%= f.search_field :title_cont %>
    <%= f.submit '検索' %>
  <% end %>
  </div>

  <div class="row">
    <div class="col-3">
      <h3>人気の投稿</h3>
      <% @favorite_posts.each.with_index(1) do |post, i| %>
        <%= link_to post_path(post.id) do %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">
                <%= i %>位
                <%= post.user.name %>
              </h5>
              <h6 class="card-subtitle text-muted">
                <%= post.title %>
              </h6>
              <p class="card-text">
                <%= post.favorites.count %>いいね
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-1">
    </div>

    <div class="col-md-8">
        <% @posts.each do |post| %>
          <div class="card mb-3 fly">
            <div class="row no-gutters">
              <div class="col-md-6 my-auto">
                <%= link_to post_path(post.id) do %>
                    <%= attachment_image_tag post, :image, :fill, 400, 300, fallback: "no_image.jpg", size: "350x250", class:"border rounded" %>
                <% end %>
              </div>

              <div class="col-md-6">
                <div class="card-body" id="post_<%= post.id %>">
                  <h5 class="card-title"><%= post.title %></h5>
                  <p><%= post.body %></p>
                  <%= attachment_image_tag post.user, :image, :fill, 30, 30, fallback: "no_image.jpg" %>
                  <%= post.user.name %>
                  <%= post.category %>
                  <!--いいねボタン-->
                  <div class="favorite-btn"><%= render "favorites/favorite-btn", post: post %></div>
                  <div class="post-evaluation" data-score="<%= post.evaluation %>"></div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <script>
          $('.post-evaluation').empty();
          $('.post-evaluation').raty({
            readOnly: true,
            score: function() {
              return $(this).attr('data-score');
            },
            path: '/assets'
          });
        </script>
    </div>
  </div>
</div>