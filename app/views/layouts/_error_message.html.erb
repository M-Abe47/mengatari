<% if model.errors.any? %>
  <div class="alert alert-dismissible alert-danger">
    <%= model.errors.count %>件のエラーが発生しました
    <% model.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% end %>